<Window x:Class="HospitalReferenceSystem.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HospitalReferenceSystem"
        mc:Ignorable="d"
        Title="Авторизация" Height="200" Width="200" Background="Aquamarine" ResizeMode="NoResize" FontSize="20">
    <Grid>
        <Label Content="Логин" HorizontalAlignment="Center" Margin="0,15,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="textBox_Login" HorizontalAlignment="Center" Margin="0,50,0,0" VerticalAlignment="Top" Width="180"/>
        <Label Content="Пароль" HorizontalAlignment="Center" Margin="0,75,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.443,-0.244"/>
        <PasswordBox x:Name="passwordBox_Password" HorizontalAlignment="Center" Margin="0,110,0,0" VerticalAlignment="Top" Width="180"/>        
    </Grid>
</Window>
